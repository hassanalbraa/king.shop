/**
 * @fileoverview Firestore Security Rules for KING STORE application.
 *
 * Core Philosophy:
 * Enforces a user-ownership model for user profiles and transactions,
 * with administrative privileges through /roles_admin/{uid}.
 * Game offers are public, and orders can be created by users but viewed only by admins.
 *
 * Data Structure:
 * - /users/{userId}
 * - /users/{userId}/transactions/{transactionId}
 * - /game_offers/{gameOfferId}
 * - /roles_admin/{uid}
 * - /transactions/{transactionId}
 * - /orders/{orderId}
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isDataOwner(data) {
      return isSignedIn() && request.auth.uid == data.id;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /** Users collection */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if false;
    }

    /** Transactions under each user */
    match /users/{userId}/transactions/{transactionId} {
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId) || isAdmin();
      allow list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == request.resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /** Public game offers */
    match /game_offers/{gameOfferId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin();
    }

    /** Admin roles */
    match /roles_admin/{uid} {
      allow get: if isAdmin() && request.auth.uid == uid;
      allow list, create, update, delete: if false;
    }

    /** Flat admin-accessible transactions */
    match /transactions/{transactionId} {
      allow get, list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    /** Orders collection (for user orders and admin review) */
    match /orders/{orderId} {
      allow create: if isSignedIn();
      allow get, list: if isAdmin();
      allow update, delete: if false;
    }
  }
}
